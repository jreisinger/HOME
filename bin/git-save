#!/usr/bin/env perl
# Commit and push modified files.
use strict;
use warnings;
use autodie;
use File::Basename;

sub set_e { # print arguments before executing them (simulates bash's set -e)
    print "+ @_\n";
    system(@cmd);
}

my $cmd = "git status > /dev/null 2>&1"; # check we are in a git repo
set_e($cmd);

my @files;

for (`git status --porcelain`) {
    my $status  = (split)[0];
    my $file    = (split)[1];
    next if $status ne 'M';            # only modified files (man git-status)
    push @files, (fileparse $file)[0]; # only basenames
}

if (@files) {
    my @cmd = ("git", "commit -am 'minor changes in " . join(", ", @files) . "'");
    set_e(@cmd)
}

my @cmd = ("git", "push");
set_e(@cmd)