#!/usr/bin/env perl
use strict;
use warnings;
use autodie;
use File::Basename;

# Print arguments before executing them. It simulates bash's set -e.
sub set_e {
    print "+ @_\n";
    system(@cmd);
}

my @files;

for (`git status --porcelain`) {
    my $status  = (split)[0];
    my $file    = (split)[1];
    next if $status ne 'M';            # only modified files (man git-status)
    push @files, (fileparse $file)[0]; # only basenames
}

if (@files) {
    my @cmd = ("git", "commit -am 'minor changes in " . join(", ", @files) . "'");
    set_e(@cmd)
}

my @cmd = ("git", "push");
set_e(@cmd)